<Application
    x:Class="Carmine.UI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:v="using:Carmine.UI.Views"
    xmlns:vm="using:Carmine.UI.ViewModels"
    RequestedThemeVariant="Default">

    <Application.Resources>
        <FontFamily x:Key="Manrope">avares://Carmine.UI/Assets/Fonts#Manrope</FontFamily>
        <FontFamily x:Key="Lucide">avares://Carmine.UI/Assets/Fonts#Lucide</FontFamily>


    </Application.Resources>

    <Application.Styles>
        <ui:ShadTheme />

        <StyleInclude Source="avares://Carmine.UI/Styles/Window.axaml" />
        <StyleInclude Source="avares://Carmine.UI/Styles/TextBlock.axaml" />
    </Application.Styles>
</Application>